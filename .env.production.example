# Production Environment Variables
# Copiar a .env y configurar con valores reales

# Server Configuration
PORT=5000
NODE_ENV=production

# Database - Hybrid Architecture
# PostgreSQL (Primary): Users, Transactions, Categories
DATABASE_URL=postgresql://username:password@your-postgres-host.com:5432/personal_finance

# MongoDB (Secondary): Logs, Files, Queue, Preferences
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/personal_finance_logs?retryWrites=true&w=majority

# JWT Secret (CAMBIAR A ALGO SUPER SEGURO)
JWT_SECRET=generate_a_very_long_random_string_here_at_least_64_characters_long
JWT_EXPIRE=7d

# Email Configuration (Gmail o SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Currency API (Free tier: https://exchangerate-api.com)
CURRENCY_API_KEY=your_api_key_if_needed
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/

# Frontend URL (Para CORS)
FRONTEND_URL=https://your-domain.com

# File Upload
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Redis (opcional - para cache)
# REDIS_URL=redis://your-redis-host:6379

# Sentry (opcional - para error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
